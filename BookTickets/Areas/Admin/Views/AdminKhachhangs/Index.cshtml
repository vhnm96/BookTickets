@model IEnumerable<BookTickets.Models.Khachhang>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content" style="height:max-content; width:max-content">

        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">Danh sách khách hàng</h1>

            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Dữ liệu</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Họ và tên</th>
                                    <th>Tài khoản</th>
                                    <th>Mật khẩu</th>
                                    <th>Email</th>
                                    <th>Địa chỉ</th>
                                    <th>Điện thoại</th>
                                    <th>Ngày sinh</th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                <tr>
                                    <th scope="row">@item.MaKh</th>
                                    <td>@item.HoTen</td>
                                    <td>@item.Taikhoan</td>
                                    <td>@item.Matkhau</td>
                                    <td>@item.Email</td>
                                    <td>@item.DiachiKh</td>
                                    <td>@item.DienthoaiKh</td>
                                    <td>@item.Ngaysinh</td>

                                    <td>
                                        <a class="btn btn-warning btn-circle btn-sm" asp-controller="AdminKhachhangs" asp-action="Edit" asp-route-id="@item.MaKh">Edit</a>
                                        <a class="btn btn-danger btn-circle btn-sm" asp-controller="AdminKhachhangs" asp-action="Delete" asp-route-id="@item.MaKh">Delete</a>
                                    </td>
                                </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>